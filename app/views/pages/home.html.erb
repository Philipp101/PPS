<h1>see all the career steps</h1>

  <% @steps.each do |step| %>
    <h2><%= step.title %></h2>
    <h3><%= step.task %></h3>
    <h4><%= step.institution %></h4>
  <% end %>
<br>
<br>
<br>
<h1>see all my skills</h1>

  <% @skills.each do |skill| %>
    <h2><%= skill.kind %></h2>
    <h3><%= skill.content %></h3>
    <h4><%= skill.level %></h4>
  <% end %>
<br>
<br>
<br>
<h1>see all docs</h1>

  <% @documents.each do |doc| %>
    <h2><%= doc.title %></h2>
    <% if doc.photo.attached? %>
        <div class="show-image mb-3" style="background-image: url(<%= cl_image_path doc.photo.key %>)"></div>
      <% else %>
        <div class="show-image mb-3 d-flex justify-content-center align-items-center" style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)); color: rgba(0,0,0,0.5)">
          <p><em>No image uploaded.</em></p>
        </div>
      <% end %>
  <% end %>
