<%= simple_form_for [@step] do |f| %>
      <div class="d-flex flex-row">
        <div class="flex-item mr-2"><%= f.input :title, as: :string %></div>
        <div class="flex-item mr-2"><%= f.input :task, as: :string %></div>
        <div class="flex-item mr-2"><%= f.input :institution, as: :string %></div>
        <div class="flex-item mr-2"><%= f.input :time_start, as: :date %></div>
        <div class="flex-item mr-2"><%= f.input :time_end, as: :date %></div>
      </div>
      <div class="d-flex justify-content-between">
        <%= link_to "Go back", :back, class: "btn btn-secondary" %>
        <%= f.button :submit, "Submit", class: "btn btn-primary" %>
      </div>
    <% end %>
