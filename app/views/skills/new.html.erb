<%= simple_form_for [@skill] do |f| %>
      <div class="d-flex flex-row">
        <div class="flex-item mr-2"><%= f.input :content, as: :string %></div>
        <div class="flex-item mr-2"><%= f.input :kind, as: :string %></div>
        <div class="flex-item mr-2"><%= f.input :level, :collection => ['Expert', 'Proficient', 'Competent', 'Advanced Beginner', 'Novice'] %></div>
      </div>
      <div class="d-flex justify-content-between">
        <%= link_to "Go back", :back, class: "btn btn-secondary" %>
        <%= f.button :submit, "Submit", class: "btn btn-primary" %>
      </div>
    <% end %>
